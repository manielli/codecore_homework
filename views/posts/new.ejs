<%- include("../partials/header") %>

<h4>New Cohort</h4>

<form action="/posts" class="POST">
    <div class="form-group">
        <input 
            type="url" 
            class="form-control" 
            name="imageUrl" 
            placeholder="http://www.example.com/some.png">
    </div>

    <div class="form-group">
        <input 
            type="text"
            class="form-control"
            name="name" 
            placeholder="Flying Funks"        
        >
    </div>
    <div class="form-group">
        <textarea 
            name="members" 
            cols="60" 
            rows="10"
        ></textarea>
    </div>

    <input type="submit" value="Submit" class="btn btn-outline-success">

</form>


