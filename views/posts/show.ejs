<%- include("../partials/header") %>

<div class="card">
    <div class="card-body">
        <div class="card-title"><%= cohort.name %></div>
        <p class="card-text">
            <%= cohort.members %><br>
        </p>
        <div class="d-flex">
            <form action="/posts/<%= cohort.id %>" method="POST">
                <input type="hidden" name="_method" value="EDIT">
                <input 
                    type="submit" 
                    class="btn btn-outline-primary mr-2"
                    value="Edit"
                >
            </form>
            <form action="/posts/<%= cohort.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input
                type="submit"
                class="btn btn-outline-primary mr-2"
                value="Delete"
            >   
            </form>
        </div>
        <div>
            <div class="mb-2 mt-2">Method</div>
            <div class="mb-2 mt-2">Quantity</div>
            <input class="form-control mb-2 mt-2"> <br>
            <a class="btn btn-outline-primary mb-2 mt-2 form-control" href="/">Assign Teams</a>
        </div>
    
    </div>

</div>

<%- include("../partials/footer") %>