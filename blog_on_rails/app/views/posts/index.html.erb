<div class="posts-list card-columns">
    <% @posts.each do |post| %>
        <div class="card m-2">
            <div class="card-body">
                <h5 class="card-title">
                  <%= link_to(post.title, post_path(post.id)) %>
                </h5>
                <p class="card-text">
                    <%= post.body %>
                </p>
                <small class="text-muted">
                â€¢ Posted <%= time_ago_in_words(post.created_at) %> ago
                </small>
            </div>
        </div>
    <% end %>
</div>