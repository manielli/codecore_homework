<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand text-primary" href="/">Blog on Rails</a>
        <ul class="nav form-inline">
          <li class="nav-item">
            <a class="nav-link" href=<%= root_path %>>  
              Home
            </a>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href=<%= new_post_path %> >
            New Post
            </a>
          </li>
          <li>Hi, <%= current_user.first_name %></li>
          <li class="nav-item nav-link">
            <%= link_to("Logout", session_path, method: :delete, data: { confirm: "Are you sure you want to log out?"}) %>
          </li>
          <% else %>
            <li class="nav-item nav-link">
              <%= link_to("Sign In", new_session_path) %>
            </li>
            <li>
              <%= link_to("Sign Up", new_user_path) %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <main class="container-fluid">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %>" >
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>